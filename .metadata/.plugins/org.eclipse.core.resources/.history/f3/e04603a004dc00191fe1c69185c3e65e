package practica1;

import java.io.File;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Departamento[] departamentos = new Departamento[5];

		Operaciones op = new Operaciones();

		Scanner teclado = new Scanner(System.in);
		File ruta = new File(System.getProperty("user.home") + File.separator + "configuracion.conf");

		if (!ruta.exists()) {
			op.crearLeerYmostrarArhivo(departamentos);
		} else {
			System.out.println("¿Quieres modificar algún departamento? 1.Sí 2.No");
			int opc = teclado.nextInt();
			String nombre = "";
			String localidad = "";
			int departamento = 0;
			teclado.nextLine();
			if (opc == 1) {
				System.out.println("Dime el número de departamento");
				departamento = teclado.nextInt();
				boolean c = op.comprobarDepartamento(departamento);
				System.out.println(departamento);
				if (!c) {
					System.out.println("El departamento no existe");
				} else {
					teclado.nextLine();
					System.out.println("Dime el nuevo nombre del departamento");
					nombre = teclado.next();
					System.out.println("Dime la localidad del departamento");
					localidad = teclado.next();
					op.modificarArchivo(departamento, nombre, localidad);
					op.mostrarArchivo();
					teclado.close();
				}
				
				System.out.println("¿Quieres eliminar algún departamento? 1.Sí 2.No");
				int op2 = teclado.nextInt();
				teclado.nextLine();
				if (opc == 1) {
					System.out.println("Dime el número de departamento");
					departamento = teclado.nextInt();
					boolean c = op.comprobarDepartamento(departamento);
					System.out.println(departamento);
					if (!c) {
						System.out.println("El departamento no existe");
					} else {
						teclado.nextLine();
						System.out.println("Dime el nuevo nombre del departamento");
						nombre = teclado.next();
						System.out.println("Dime la localidad del departamento");
						localidad = teclado.next();
						op.modificarArchivo(departamento, nombre, localidad);
						op.mostrarArchivo();
						teclado.close();
					}

			} else {
				System.out.println("Hasta la próxima");
			}
		}

	}

}
